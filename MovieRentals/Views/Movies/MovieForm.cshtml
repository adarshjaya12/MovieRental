@model MovieRentals.ViewModel.MovieView
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MovieForm</h2>

@using(Html.BeginForm("Submit","Movies"))
{
    <div class="form-group">
        <h4>@Html.LabelFor(l => l.Movies.MovieName)</h4>
        @Html.TextBoxFor(t => t.Movies.MovieName, new { @class = "form-control" })
        @Html.ValidationMessageFor( t => t.Movies.MovieName)
    </div>
    <div class="form-group">
        <h4>@Html.LabelFor(l => l.Movies.ReleaseDate)</h4>
        @Html.TextBoxFor(t => t.Movies.ReleaseDate, "{0: d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <h4>@Html.LabelFor(l => l.Movies.Genres.GenresId)</h4>
        @Html.DropDownListFor(d => d.Movies.GenresId, new SelectList(Model.Genres, "GenresId", "GenreType"), "Select Genre", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <h4>@Html.LabelFor(l => l.Movies.NumberInStock)</h4>
        @Html.TextBoxFor(t => t.Movies.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.Movies.NumberInStock)
    </div>
    <div class="form-group">
        @Html.HiddenFor( h => h.Movies.Id)
        
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>

}


