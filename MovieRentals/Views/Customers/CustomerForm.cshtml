@model MovieRentals.ViewModel.CustomerView
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using(Html.BeginForm("Create","Customers"))
{
        <div class="form-group">
            <h4>@Html.LabelFor(l => l.Customer.CustomerName)</h4>
            @Html.TextBoxFor(m => m.Customer.CustomerName, new { @class = "form-control" })
            @Html.ValidationMessageFor(t => t.Customer.CustomerName)
        </div>
        <div class="form-group">
            <h4>@Html.LabelFor(l => l.Customer.BirthDate)</h4>
            @Html.TextBoxFor(m => m.Customer.BirthDate,"{0: d MMM yyyy}"  , new { @class = "form-control" })
           
        </div>
        <div class="form-group">
            <h4>@Html.LabelFor(l => l.Customer.CustomerGender)</h4>
            @Html.DropDownListFor(l => l.Customer.CustomerGender, new SelectList(Model.CustomerGender, "GenderType", "GenderType"), "Select Gender", new { @class = "form-control" })
            @Html.ValidationMessageFor(t => t.Customer.CustomerGender)
        </div>
        @*<div class="form-group">
            <h4>@Html.LabelFor(l => l.Customer.Age)</h4>
            @Html.TextBoxFor(m => m.Customer.Age, new { @class = "form-control" })
            @Html.ValidationMessageFor(t => t.Customer.Age)
        </div>*@
        <div class="form-group"> 
            <h4>@Html.LabelFor(l => l.Customer.MembershipTypeId)</h4>
            @Html.DropDownListFor(d => d.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "MembershipTypeId", "MemberName"), "Select Memebership", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter) Subscribe to newsletter
                </label>
            </div>
        </div>
        <div class="form-group">
            @Html.HiddenFor(m => m.Customer.CustomerId)
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

}